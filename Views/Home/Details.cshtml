@model CakeShop.Models.product

@{
    ViewBag.Title = "Details";
}

<div>
    <hr />
    <dl class="dl-horizontal">
        @*<dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>*@

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dd>
            @*@Html.DisplayFor(model => model.Image)*@
            <img src="@Url.Content(Model.img)" alt="Image" height="150" width="150" />
        </dd>
        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>
    </dl>
</div>
<p>


    <a id="btn_add" href="@Url.Action("Add", "AddToCart",new { id = Model.id })" class="btn btn-info btn-lg" style="margin-left:60px">
        <span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart
    </a>

    <a id="btn_add" href="@Url.Action("Index", "Home")" class="btn btn-info btn-lg" style="margin-left:60px">
        <span class="glyphicon glyphicon-eye-open"></span> Continue shopping
    </a>
    @Html.ActionLink("Back to List", "Index")
</p>